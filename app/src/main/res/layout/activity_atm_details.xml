<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar1"
        style="@style/Widget.MyApp.ActionBar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="3dp"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark">
        <!--
                <RelativeLayout android:id="@+id/toolbar_logo"
                                android:layout_width="180dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/callsikandarlogo2"
                                android:layout_gravity="left|center_vertical"

                                >
                </RelativeLayout>
                -->
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar1"
        android:padding="15dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivAtmImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_launcher"/>
                <TableLayout
                    android:id="@+id/tl12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ivAtmImage"
                    android:stretchColumns="3"
                    android:visibility="visible">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_column="3"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/tv61"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="ATM Name"
                            android:textColor="@color/text_color_black"
                            android:textSize="12dp"
                            android:textStyle="bold"/>


                        <TextView
                            android:id="@+id/tv62"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text=":"
                            android:textColor="@color/text_color_black"
                            android:textSize="15dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvAtmName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="3"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:maxEms="10"
                            android:padding="5dp"
                            android:textColor="@color/text_color_black"
                            android:textSize="12dp"
                            android:textStyle="bold"/>


                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_column="3">

                        <TextView
                            android:id="@+id/tv63"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="Bank Name"
                            android:textColor="@color/text_color_black"
                            android:textSize="12dp"
                            android:textStyle="bold"/>


                        <TextView
                            android:id="@+id/tv64"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text=":"
                            android:textColor="@color/text_color_black"
                            android:textSize="15dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvAtmBank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="3"
                            android:padding="5dp"
                            android:textColor="@color/text_color_black"
                            android:textSize="12dp"
                            android:textStyle="bold"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_column="3">

                        <TextView
                            android:id="@+id/tv65"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="Address"
                            android:textColor="@color/text_color_black"
                            android:textSize="12dp"
                            android:textStyle="bold"/>


                        <TextView
                            android:id="@+id/tv66"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text=":"
                            android:textColor="@color/text_color_black"
                            android:textSize="15dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvAtmLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="3"
                            android:padding="5dp"
                            android:textColor="@color/text_color_black"
                            android:textSize="12dp"
                            android:textStyle="bold"/>
                    </TableRow>
                </TableLayout>

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tl12">

                    <TextView
                        android:id="@+id/tvPic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Take Picture"
                        android:textColor="@color/text_color_blue"
                        android:textSize="12sp"/>

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:stretchColumns="1"
                        android:layout_alignParentStart="true" android:layout_below="@+id/tvPic"
                        android:layout_marginBottom="10dp" android:orientation="vertical">

                        <TableRow
                            android:layout_marginTop="10dp">
                            <CheckBox
                                android:id="@+id/cbCctv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:text=""/>
                            <Button
                                android:id="@+id/btCctv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_button"
                                android:text="CCTV"
                                android:textColor="@color/text_color_white"
                                />

                        </TableRow>
                        <TableRow
                            android:layout_marginTop="10dp">
                            <CheckBox
                                android:id="@+id/cbMachine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:text=""/>
                            <Button
                                android:id="@+id/btMachine"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_button"
                                android:text="Machine"
                                android:textColor="@color/text_color_white"/>

                        </TableRow>
                        <TableRow
                            android:layout_marginTop="10dp">
                            <CheckBox
                                android:id="@+id/cbAc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                />
                            <Button
                                android:id="@+id/btAc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_button"
                                android:text="Ac"
                                android:textColor="@color/text_color_white"/>
                        </TableRow>
                        <TableRow
                            android:layout_marginTop="10dp">

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:id="@+id/cbGuard"/>
                            <Button
                                android:id="@+id/btGuard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_button"
                                android:text="Guard"
                                android:textColor="@color/text_color_white"/>

                        </TableRow>


                    </TableLayout>
                </RelativeLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:layout_below="@+id/rl1"
                    android:layout_marginTop="30dp"
                    android:id="@+id/btSubmit"
                    android:textColor="@color/text_color_white"
                    android:background="@drawable/bg_button"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </ScrollView>



    </RelativeLayout>
</RelativeLayout>